<div class="container">
  <div class="row"> 
<% flash.each do |message_type, message| %>
   <%= content_tag :div, message, class: message_type %>
   <% end %>
<%= render 'users/user_info', user: @user %>
  <div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
<tr>
  <td><%= link_to image_tag(@user.get_profile_image(100,100)), user_path(@user.id) %> <br> <%= link_to @user.name,  user_path(@user.id)%></td>
  <td><%= link_to @books.title,  book_path(@books.id) %></td>
  <td><%= @books.body %></td>
  <% if @books.user_id == current_user.id %>
    <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
    <td><%= link_to "Destroy",book_path(@books.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-sm btn-danger"%> </td>
  <% end %>

 
 </table>
 </div>
 </div>
 </div>
